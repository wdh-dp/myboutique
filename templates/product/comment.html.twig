{% extends 'base.html.twig' %}

{% block content %}


	<h1 class="mt-3">
		Poster un commentaire sur le produit
		{{product.name}}
	</h1>

	{% if product.isProductFromUser(app.user) %}


	{% if product.getCommentFromUser(app.user) is null %}


	<h2>
		Votre avis compte
	</h2>

		{{form(form)}}

		{% else %}

				<h4 class="alert alert-danger">Vous avez déjà laissé un commentaire pour l'article
					{{product.name}}</h4>

		{% endif %}


	{% else %}
		<h4 class="alert alert-danger">Vous n'avez pas acheté l'article
			{{product.name}}</h4>

	{% endif %}
{% endblock %}


