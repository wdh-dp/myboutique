{% extends 'base.html.twig' %}

{% block title %}Mes Adresses - My boutique
{% endblock %}


{% block content %}


	<a href="{{path('account_address_add')}}" class="btn btn-primary float-end">Ajouter une adresse</a>
	<h1 class="mt-3">Mes adresses</h1>
	<p>Dans cet espace, vous pouvez gérer vos adresses</p>
	<a href="{{path('account')}}">Retour</a>
	<hr>

	{% if app.user.addresses | length ==0%}
		<h2 class="text-center">
			<span class="badge bg-secondary">Vous n'avez pas d'adresse enregistrée</span>
		</h2>

	{% else %}


		<div class="row">

			{% for address in app.user.addresses %}


				<div class="col-md-4">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h4 class="card-title">{{address.name}}</h5>
							<h5 class="card-subtitle mb-2 text-muted">{{address.firstName}}
								{{address.lastName}}</h6>
							<p class="card-text">{{address.address}}</p>

							<p>{{address.postal}}

								{{address.city}}</p>
							<a href="{{path('account_address_edit',{'id':address.id})}}" class="card-link btn btn-info">Modifier</a>
							<a href="{{path('account_address_delete',{'id':address.id})}}" class="card-link btn btn-danger" onclick="return confirm('Etes-vous sûrs de supprimer l\'adresse {{address.name}}')">Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	{% endif %}


{% endblock %}
